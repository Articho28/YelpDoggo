<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= doggo.name %></h1>
        <div style="width: 30%; margin: 25px auto;"> 
            <form action="/doggos/<%= doggo._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Type your comment here, and be nice">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary" >Submit</button>
                </div>
            </form>   
            <a href="/doggos">Go Back</a>
        </div>
      
    </div>
   
</div>


<%- include("../partials/footer") %>
