<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= doggo.name %></h1>
        <div style="width: 30%; margin: 25px auto;"> 
            <form action="/doggos/<%= doggo._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="doggo[name]" value="<%= doggo.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="doggo[price]" value="<%= doggo.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="doggo[image]" value="<%= doggo.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="doggo[description]" value="<%= doggo.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>   
            <a href="/doggos">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
