<%- include("../partials/header") %>


<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpDoggo</h1>
            <p>Spend some quality time with one of our hand-picked doggos from all over!</p>
            <p>
                <a class="btn btn-primary btn-lg"  href="/doggos/new"> Add New Doggo</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Doggos!</h3>
        </div>
    </div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% doggos.forEach(function(doggo) { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= doggo.image %>" alt="">
                        <div class="caption">
                            <h4><%= doggo.name %></h4>
                        </div>
                        <p>
                            <a href="/doggos/<%=doggo._id %>" class="btn btn-primary">More Info</a>
                        </p>
                    </div>
                </div>
            <% }); %> 
    </div>
</div>

<%- include("../partials/footer") %>
